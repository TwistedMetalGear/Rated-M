<?xml version="1.0" encoding="utf-8"?>
<net.silentbyte.ratedm.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/table_row"
                                             android:orientation="horizontal"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingTop="@dimen/friend_row_padding"
                                             android:paddingBottom="@dimen/friend_row_padding"
                                             android:background="@color/white">
    <ImageView android:id="@+id/friend_picture"
               android:layout_width="@dimen/list_item_image_size"
               android:layout_height="@dimen/list_item_image_size"
               android:layout_marginTop="@dimen/list_item_image_margin"
               android:layout_marginBottom="@dimen/list_item_image_margin"
               android:layout_marginLeft="@dimen/list_item_image_margin"
               android:focusable="false"/>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_vertical">
        <TextView android:id="@+id/friend_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/list_item_text_margin"
                  android:focusable="false"
                  android:textSize="@dimen/list_item_font_size"/>
        <TextView android:id="@+id/friend_display_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/list_item_text_margin"
                  android:focusable="false"
                  android:textSize="@dimen/new_match_font_size_small"/>
        <TextView android:id="@+id/friend_open_for_invites"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/list_item_text_margin"
                  android:focusable="false"
                  android:textSize="@dimen/new_match_font_size_small"/>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/list_item_text_margin">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:focusable="false"
                      android:textSize="@dimen/new_match_font_size_small"
                      android:text="@string/wins"/>
            <TextView android:id="@+id/friend_wins"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:focusable="false"
                      android:textSize="@dimen/new_match_font_size_small"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/list_item_text_margin"
                      android:focusable="false"
                      android:textSize="@dimen/new_match_font_size_small"
                      android:text="@string/losses"/>
            <TextView android:id="@+id/friend_losses"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:focusable="false"
                      android:textSize="@dimen/new_match_font_size_small"/>
            <TextView android:id="@+id/friend_active_percentage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/list_item_text_margin"
                      android:focusable="false"
                      android:textSize="@dimen/new_match_font_size_small"/>
        </LinearLayout>
    </LinearLayout>
    <CheckBox android:id="@+id/checkbox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/list_item_checkbox_margin"
              android:layout_gravity="center_vertical"
              android:focusable="false"
              android:clickable="false"/>
</net.silentbyte.ratedm.CheckableLinearLayout>
